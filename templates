  <script>
    async function fetchData() {
      try {
        const res = await fetch('/api');
        const data = await res.json();

        const bullishList = document.getElementById("bullish-list");
        const bearishList = document.getElementById("bearish-list");

        bullishList.innerHTML = "";
        bearishList.innerHTML = "";

        data.bullish.forEach(stock => {
          const li = document.createElement("li");
          li.textContent = stock;
          bullishList.appendChild(li);
        });

        data.bearish.forEach(stock => {
          const li = document.createElement("li");
          li.textContent = stock;
          bearishList.appendChild(li);
        });
      } catch (err) {
        console.error("Error fetching data:", err);
      }
    }

    // Auto refresh every 1 min
    fetchData();
    setInterval(fetchData, 60000);
  </script>
